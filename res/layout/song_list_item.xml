<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
    	android:id="@+id/songHistoryItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants"
        android:orientation="vertical"
    	android:background="@drawable/song_list_item_selector">

    	<LinearLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:layout_weight="1" >

    	    <ImageButton
    	        android:id="@+id/songPlayPauseButton"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_gravity="center_vertical"
    	        android:background="@android:color/transparent"
    	        android:focusable="false"
    	        android:focusableInTouchMode="false"
    	        android:src="@android:drawable/ic_media_play" />

    	    <ProgressBar
    	        android:id="@+id/songItemLoading"
    	        style="?android:attr/progressBarStyleSmall"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_gravity="center_vertical"
    	        android:minHeight="15dp"
    	        android:minWidth="30dip"
    	        android:visibility="gone" />

    	    <LinearLayout
    	        android:layout_width="match_parent"
    	        android:layout_height="wrap_content"
    	        android:layout_gravity="center_vertical"
    	        android:layout_weight="1"
    	        android:orientation="vertical" >

    	        <TextView
    	            android:id="@+id/songListItemArtistTitle"
    	            android:layout_width="match_parent"
    	            android:layout_height="match_parent"
    	            android:text="Artist - Title"
    	            android:textSize="12sp" />

    	        <TextView
    	            android:id="@+id/songListItemDate"
    	            android:layout_width="match_parent"
    	            android:layout_height="wrap_content"
    	            android:text="date"
    	            android:textSize="12sp" />

    	    </LinearLayout>

    	    <ImageButton
    	        android:id="@+id/songDeleteButton"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:layout_gravity="center_vertical"
    	        android:background="@android:color/transparent"
    	        android:focusable="false"
    	        android:src="@android:drawable/ic_menu_close_clear_cancel" />

    	</LinearLayout>

	</LinearLayout>
