<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/common_background" >
    
    <LinearLayout
            android:layout_width="match_parent"
    	    android:layout_height="50dp"
    	    android:orientation="horizontal"
    	    android:background="@drawable/title_background">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">

            <TextView
                    android:id="@+id/artistTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Artist"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"/>

            <TextView
                    android:id="@+id/titleTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Title"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"/>

        </LinearLayout>

        <ImageButton
                android:id="@+id/shareButton"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:background="@drawable/action_button_selector"
                android:src="@drawable/ic_action_share" />

        <ImageButton
                android:id="@+id/badButton"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:background="@drawable/action_button_selector"
                android:src="@drawable/ic_action_bad" />

        <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:background="@drawable/action_button_selector"
                android:src="@drawable/ic_action_overflow" />
        
    </LinearLayout>
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:background="@android:color/transparent">
        
    	<TextView 
        	android:id="@+id/vkLyrics"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:text="Lyrics we found love in a hopeless place and so on and so on\nand coo"
        	android:textColor="#eeeeee"
        	android:textSize="18sp"
        	android:gravity="center"
        	android:paddingTop="50dp"
        	android:paddingBottom="50dp"
        	android:paddingLeft="10dp"
        	android:paddingRight="10dp"
        	android:lineSpacingMultiplier="1.2"/>
    
    </ScrollView>
    
</LinearLayout>
