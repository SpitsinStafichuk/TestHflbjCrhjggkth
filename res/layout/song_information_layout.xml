<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:orientation="horizontal"
    	android:background="@drawable/title_background">

                <ImageButton
                    android:id="@+id/shareButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
            		android:layout_weight="1"
            		android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_action_share" />

                <ImageButton
                    android:id="@+id/downloadButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
            		android:layout_weight="1"
            		android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_action_download" />
                
                <ImageButton
                    android:id="@+id/deleteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
            		android:layout_weight="1"
            		android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_action_remove" />

                <ImageButton
                    android:id="@+id/refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
            		android:layout_weight="1"
            		android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_action_refresh" />

                <ImageButton
                    android:id="@+id/addVkButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
            		android:layout_weight="1"
            		android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_action_new" />

                <ImageButton
                    android:id="@+id/lastfmLoveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
            		android:layout_weight="1"
            		android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_action_favorite" />
    </LinearLayout>
    
    <ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/common_background">

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
    	<com.git.programmerr47.testhflbjcrhjggkth.view.DynamicImageView
        	android:id="@+id/songInfoCoverArt"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="10dp"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp"
        	android:layout_marginBottom="5dp"
        	android:scaleType="centerCrop"
        	android:src="@drawable/no_cover_art" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:drawable/alert_light_frame">

        <ImageButton
            android:id="@+id/songInfoPlayPauseButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/ic_media_play"
            android:background="@android:color/transparent"/>
        
    	<ProgressBar
    	    android:id="@+id/songInfoLoading"
    	    style="?android:attr/progressBarStyleSmall"
    	    android:layout_width="40dp"
    	    android:layout_height="20dp"
    	    android:layout_gravity="center_vertical"
    	    android:visibility="gone" />

        <ProgressBar
            android:id="@+id/songInfoPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            style="?android:attr/progressBarStyleHorizontal"/>
        
    </LinearLayout>

    <TextView
        android:id="@+id/songInfoTrackId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="TrackId" />

    <TextView
        android:id="@+id/songInfoArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Artist" />

    <TextView
        android:id="@+id/songInfoAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Album" />

    <TextView
        android:id="@+id/songInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Title" />

    <TextView
        android:id="@+id/songInfoDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="Date of listening" />

</LinearLayout>
</ScrollView>
</LinearLayout>


