<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_background"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/songInfoCoverArt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/no_cover_art"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Actions"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
            
            <LinearLayout
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:layout_weight="1"
            	android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/shareButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
            		android:layout_weight="1"
            		android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/share_icon" />

                <ImageButton
                    android:id="@+id/downloadButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
            		android:layout_weight="1"
            		android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/download_icon" />
            
        	</LinearLayout>
        	
        	<LinearLayout
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:layout_weight="1"
            	android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/addVkButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
            		android:layout_weight="1"
            		android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/add_vk_icon" />

                <ImageButton
                    android:id="@+id/lastfmLoveButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
            		android:layout_weight="1"
            		android:layout_margin="5dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/lastfm_love_icon" />
            
        	</LinearLayout>
            
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:drawable/alert_light_frame">

        <ImageButton
            android:id="@+id/songInfoPlayPauseButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/ic_media_play"
            android:background="@android:color/transparent"/>
        
    	<ProgressBar
    	    android:id="@+id/songItemLoading"
    	    style="?android:attr/progressBarStyleSmall"
    	    android:layout_width="40dp"
    	    android:layout_height="20dp"
    	    android:layout_gravity="center_vertical"
    	    android:visibility="gone" />

        <ProgressBar
            android:id="@+id/songInfoPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            style="?android:attr/progressBarStyleHorizontal"/>
        
    </LinearLayout>

    <TextView
        android:id="@+id/songInfoTrackId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="TrackId" />

    <TextView
        android:id="@+id/songInfoArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="Artist" />

    <TextView
        android:id="@+id/songInfoAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="Album" />

    <TextView
        android:id="@+id/songInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="Title" />

    <TextView
        android:id="@+id/songInfoDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="Date of listening" />

</LinearLayout>
