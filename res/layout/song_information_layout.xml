<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
    	    android:layout_height="50dp"
    	    android:orientation="horizontal"
    	    android:background="@drawable/title_background">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        <ImageButton
                android:id="@+id/shareButton"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_action_share" />

        <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_action_remove" />

        <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_action_overflow" />
    </LinearLayout>
    
    <ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/common_background">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                <com.git.programmerr47.testhflbjcrhjggkth.view.DynamicImageView
                    android:id="@+id/songInfoCoverArt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:background="@drawable/standart_block_background"
                    android:padding="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cover_art_loading" />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/standart_block_background">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:text="Audio player for ProstoPleer urls"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/standart_block_background">

                    <ImageButton
                            android:id="@+id/songInfoPlayPauseButtonForPP"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_media_play"
                            android:background="@android:color/transparent"/>

                    <ProgressBar
                            android:id="@+id/songInfoLoadingForPP"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/SongInfoRealArtistTitleForPP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:paddingLeft="10dp"
                                android:paddingBottom="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="5dp"
                                android:text = "PP Song Artist - Title full with auto scrolling. XDXD"
                                android:textColor="@color/black"
                                android:singleLine="true"
                                android:textSize="20sp"
                                android:scrollHorizontally="true"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:background="@drawable/standart_block_background"/>

                        <ImageButton
                                android:id="@+id/downloadPPButton"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:background="@drawable/standart_block_background"
                                android:src="@drawable/ic_action_download" />

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/standart_block_background">


                        <SeekBar
                                android:id="@+id/SongProgressForPP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:progress="0"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/vkPlayerLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/standart_block_background">

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:text="Audio player for Vkontakte urls"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/vkPlayer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@drawable/standart_block_background">

                    <ImageButton
                            android:id="@+id/songInfoPlayPauseButtonForVk"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_media_play"
                            android:background="@android:color/transparent"/>

                    <ProgressBar
                            android:id="@+id/songInfoLoadingForVk"
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/SongInfoRealArtistTitleForVk"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:paddingLeft="10dp"
                                android:paddingBottom="5dp"
                                android:paddingRight="5dp"
                                android:paddingTop="5dp"
                                android:text = "VK Song Artist - Title full with auto scrolling. XDXD"
                                android:textColor="@color/black"
                                android:singleLine="true"
                                android:textSize="20sp"
                                android:scrollHorizontally="true"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:ellipsize="marquee"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:background="@drawable/standart_block_background"/>

                        <ImageButton
                                android:id="@+id/addVkButton"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_action_new"
                                android:background="@drawable/standart_block_background"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/standart_block_background">

                            <SeekBar
                                    android:id="@+id/SongProgressForVk"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:progress="0"/>

                        </LinearLayout>

                        <ImageButton
                                android:id="@+id/downloadVKButton"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_action_download"
                                android:background="@drawable/standart_block_background"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal" android:layout_marginTop="5dp">

                <ImageButton
                        android:id="@+id/lyricsButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_action_lyrics"
                        android:background="@drawable/standart_block_background"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Get lyrics"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="@drawable/standart_block_background"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                <ImageButton
                        android:id="@+id/youtubeButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_action_youtube"
                        android:background="@drawable/standart_block_background"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Watch on YouTube app"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="@drawable/standart_block_background"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">


                <ImageButton
                        android:id="@+id/lastfmLoveButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_action_favorite"
                        android:background="@drawable/standart_block_background"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="Love on last.fm"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:background="@drawable/standart_block_background"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/standart_block_background">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:text="TrackId:"
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/songInfoTrackId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:text="TrackId"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="Artist:"
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/songInfoArtist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="Artist"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="Album:"
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/songInfoAlbum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="Album"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="Title:"
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/songInfoTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="Title"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="Date:"
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                    <TextView
                            android:id="@+id/songInfoDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="Date"
                            android:textColor="@color/black"
                            android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>


