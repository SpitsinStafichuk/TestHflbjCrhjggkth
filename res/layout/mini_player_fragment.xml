<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/miniplayer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/miniplayer_background">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/dark_blue">

        <SeekBar
                android:id="@+id/miniplayerSongProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:progress="0"
                style="@style/MiniPlayerSeekBar"/>

    </LinearLayout>

    <TextView
            android:id="@+id/miniplayerSongInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="10dp"
            android:paddingBottom="2dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:text = "@string/miniplayer_base_line"
            android:textColor="@color/white"
            android:singleLine="true"
            android:textSize="16sp"
            android:scrollHorizontally="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:background="@drawable/text_miniplayr_background"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

            <ImageButton
                    android:id="@+id/miniplayerPrevButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@android:drawable/ic_media_previous"
                    android:background="@drawable/action_button_selector"/>

            <LinearLayout
                android:id="@+id/miniplayerPlayPauseLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center">

                <ImageButton
                        android:id="@+id/miniplayerPlayButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_media_play"
                        android:background="@drawable/action_button_selector"/>

                <ProgressBar
                        android:id="@+id/miniplayerSongLoading"
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:minHeight="20dp"
                        android:minWidth="20dp"
                        android:visibility="gone"/>

            </LinearLayout>

            <ImageButton
                    android:id="@+id/miniplayerNextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@android:drawable/ic_media_next"
                    android:background="@drawable/action_button_selector"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"/>

    </LinearLayout>

</LinearLayout>