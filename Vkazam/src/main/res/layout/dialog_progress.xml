<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/very_pale_cyan">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="6dip"
                android:layout_gravity="center"
                android:src="@drawable/ic_alert_dialog"
                android:background="@android:color/transparent"/>

        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dip"
                android:text="Title"
                android:singleLine="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/light_cyan"
                android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:orientation="horizontal"
            android:background="@color/light_cyan">
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

        <ProgressBar
                android:id="@+id/progressBarDefault"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="20dp"
                android:minHeight="32dp"
                android:minWidth="32dp"/>

        <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Message"
                android:textColor="@color/black"
                android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/horizontalStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

        <ProgressBar
                android:id="@+id/progressBarHorizontal"
                style="@style/ProgressBarAppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:minHeight="32dp"
                android:minWidth="32dp"/>

        <TextView
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="100%"
                android:textColor="@color/black"
                android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

        <LinearLayout
                android:id="@+id/positiveButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_button_left">

            <TextView
                    android:id="@+id/positiveButtonTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Yes"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@android:color/transparent"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/negativeButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/dialog_button_right">

            <TextView
                    android:id="@+id/negativeButtonTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="No"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="@android:color/transparent"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>