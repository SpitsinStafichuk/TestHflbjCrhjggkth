<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/very_pale_cyan">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <include
                android:id="@+id/settingsVkConnection"
                layout="@layout/icon_checkbox_preference"/>

        <include
                android:id="@+id/settingsVkUrls"
                layout="@layout/icon_checkbox_preference"/>

        <include
                android:id="@+id/settingsVkAudioBroadcast"
                layout="@layout/icon_checkbox_preference"/>

        <include
                android:id="@+id/settingsVkLyrics"
                layout="@layout/icon_checkbox_preference"/>

        <include
                android:id="@+id/settingsOnlyWiFiConntection"
                layout="@layout/icon_checkbox_preference"/>

        <include
                android:id="@+id/settingsLastFmConnection"
                layout="@layout/icon_checkbox_preference"/>

        <include
                android:id="@+id/settingsAutoRecognize"
                layout="@layout/icon_checkbox_preference"/>

        <include
                android:id="@+id/settingsTimerDelay"
                layout="@layout/icon_preference_with_additional_info"/>
    </LinearLayout>

</ScrollView>