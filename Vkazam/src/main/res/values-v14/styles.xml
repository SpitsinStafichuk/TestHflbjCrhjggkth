<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="PreferencesTheme" parent="AppTheme">
        <item name="android:background">@color/very_pale_cyan</item>
    </style>

    <!-- Application theme. -->

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Setting values in the android namespace affects API levels 14+ -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/apptheme_btn_check_holo_light
        </item>
        <item name="android:radioButtonStyle">@drawable/apptheme_btn_radio_holo_light</item>
        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
        <item name="android:imageButtonStyle">@style/ImageButtonAppTheme</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarAppTheme</item>
        <item name="android:seekBarStyle">@style/SeekBarAppTheme</item>
        <item name="android:scrollbarThumbVertical">
            @drawable/apptheme_fastscroll_thumb_default_holo
        </item>
        <item name="android:editTextStyle">@style/EditTextAppTheme</item>
        <item name="android:background">@color/grey</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <!-- Setting values in the android namespace affects API levels 14+ -->
        <item name="android:background">@color/pure_blue</item>
    </style>

    <style name="HistoryListView" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="PagerTabStripText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MiniPlayerSeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/miniplayer_progress</item>
        <item name="android:indeterminateDrawable">@drawable/miniplayer_progress</item>
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <item name="android:thumb">@android:color/transparent</item>
    </style>

</resources>